<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainlayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SendMsg"
        android:id="@+id/btngetname"
        android:layout_gravity="left|center|top"
        android:alpha="0.5"
        android:background="@android:color/holo_purple"
        android:clickable="false"
        android:height="20dp"
        android:longClickable="false"
        android:nestedScrollingEnabled="false"
        android:width="120dp"
        android:layout_alignTop="@+id/edtname"
        android:layout_toRightOf="@+id/edtname"
        android:layout_toEndOf="@+id/edtname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtname"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="1000dp"
        android:textColor="#00ffffff"
        android:background="@android:color/black"
        android:clickable="true"
        android:autoText="true"
        style="@style/Base.Widget.AppCompat.ActionBar.TabBar"
        android:backgroundTintMode="screen"
        android:capitalize="characters"
        android:textColorHighlight="@color/background_floating_material_dark"
        android:textColorHint="@color/accent_material_light" />
</RelativeLayout>
